# 서버 설정
PORT=5000
NODE_ENV=development

# 데이터베이스 설정
DATABASE_URL=postgresql://username:password@localhost:5432/hotstinder

# 로깅 설정
LOG_LEVEL=info

# 세션 설정
# MongoDB 설정
USE_MONGODB=true
MONGODB_URI=mongodb://localhost:27017/hotstinder

# JWT 설정
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Battle.net OAuth 설정
BNET_CLIENT_ID=your-battlenet-client-id
BNET_CLIENT_SECRET=your-battlenet-client-secret
BNET_CALLBACK_URL=http://localhost:5000/api/auth/bnet/callback
BNET_REDIRECT_URI=http://localhost:5173/auth/callback
BNET_REGION=kr

# Redis 설정 (선택사항)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 프론트엔드 URL
FRONTEND_URL=http://localhost:5173

# 세션 시크릿 (랜덤 문자열로 변경 필요)
SESSION_SECRET=your-session-secret-key
