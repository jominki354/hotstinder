# 서버 설정
PORT=5000
NODE_ENV=production

# 데이터베이스 설정
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/hotstinder?retryWrites=true&w=majority
USE_MONGODB=true

# JWT 보안 키 (실제 배포 시 복잡한 키로 변경 필수!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# 세션 보안 키 (실제 배포 시 복잡한 키로 변경 필수!)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production-min-32-chars

# CORS 설정
FRONTEND_URL=https://your-app-name.up.railway.app

# 파일 업로드 설정
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./uploads

# 로그 레벨
LOG_LEVEL=info

# Battle.net OAuth (선택사항)
BNET_CLIENT_ID=your_bnet_client_id
BNET_CLIENT_SECRET=your_bnet_client_secret
BNET_CALLBACK_URL=https://your-app-name.up.railway.app/api/auth/bnet/callback 