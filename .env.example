# 데이터베이스 설정 (PostgreSQL)
# 로컬 개발용
DATABASE_URL=postgresql://username:password@localhost:5432/hotstinder

# Vercel PostgreSQL (자동 생성됨)
POSTGRES_URL=
POSTGRES_PRISMA_URL=
POSTGRES_URL_NON_POOLING=
POSTGRES_USER=
POSTGRES_HOST=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=

# PostgreSQL 설정
USE_POSTGRESQL=true

# JWT 설정
JWT_SECRET=your-super-secret-jwt-key-here

# Battle.net OAuth 설정
BNET_CLIENT_ID=your-battlenet-client-id
BNET_CLIENT_SECRET=your-battlenet-client-secret
BNET_REDIRECT_URI=http://localhost:5173/auth/callback
BNET_REGION=kr
BNET_CALLBACK_URL=http://localhost:5000/api/auth/bnet/callback

# Redis 설정 (선택사항)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 환경 설정
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# 로깅 설정
LOG_LEVEL=info

# 서버 설정
PORT=5000

# 관리자 계정 설정
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@hotstinder.com

# 매치메이킹 설정
MAX_QUEUE_SIZE=1000
