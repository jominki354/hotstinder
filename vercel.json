{
  "version": 2,
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/build",
  "installCommand": "npm install",
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "USE_POSTGRESQL": "true"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "CI": "false",
      "DISABLE_ESLINT_PLUGIN": "true"
    }
  }
}
